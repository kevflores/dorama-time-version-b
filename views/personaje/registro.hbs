<div class="row" id="dt-row">
	<div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
		<div class="panel panel-primary" id="dt-panel">
			<div class="panel-heading" id="dt-panel-heading">{{title}}</div>

				<div class="panel-body" id="dt-panel-body">

					<div class="form-group">
				    <label for="dorama">Dorama</label>
				    <input type="text" name="dorama" id="dorama" class="form-control" value="Nombre de dorama" disabled>
				  </div>

				  <div class="form-group">
				    <label for="actor">Actor/Actriz</label>
				    <input type="text" name="actor" id="actor" class="form-control" value="Nombre de actor/actriz" disabled>
				  </div>

					<div class="form-group">
				    <label for="categoria_personaje">Categoría de Personaje</label>
				    <select class="form-control" name="categoria_personaje" id="categoria_personaje">
				      <option>Principal</option>
				      <option>Secundario</option>
				      <option>Cameo</option>
				    </select>
				  </div>

			    <div class="form-group">
				    <label for="nombre">Nombre</label>
				    <input type="text" name="nombre" id="nombre" class="form-control" placeholder="Ingresa el nombre del personaje aquí">
				  </div>

				  <div class="form-group">
				    <label for="nombre_alternativo">Nombre Alternativo</label>
				    <input type="text" name="nombre_alternativo" id="nombre_alternativo" class="form-control" placeholder="Ingresa el nombre alternativo del personaje aquí">
				  </div>

				  <div class="form-group">
				    <label for="edad">Edad</label>
				    <input type="text" name="edad" id="edad" class="form-control" placeholder="Ingresa la edad del personaje aquí">
				  </div>

				  <div class="form-group">
				    <label for="resumen">Resumen</label>
				    <textarea class="form-control" name="resumen" id="resumen" rows="2" placeholder="Ingresa el resumen del personaje aquí"></textarea>
				  </div>

				  <div class="form-group">
				    <label for="imagen">Cargar Imagen</label>
				    <input type="text" name="imagen" id="imagen" class="form-control" placeholder="Cargar imagen del personaje aquí">
				  </div>
				  
				  <button type="button" class="btn btn-primary dt-button" id="dt-button">
				  	<i class="fa fa-floppy-o" aria-hidden="true"></i> Guardar
				  </button>

				</div> <!-- Fin de panel-body -->

		</div> <!-- Fin de panel -->
	</div> <!-- Fin de col-**-** -->
</div> <!-- Fin de row -->